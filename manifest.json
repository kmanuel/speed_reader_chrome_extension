{
  "manifest_version": 2,

  "name": "Speed Reader Plugin",
  "description": "This extension will let you speed-read selected text",
  "version": "1.0",

   "background": {
    "persistent": false,
    "scripts":["background.js"]
  },
  "content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*", "<all_urls>"],
    "js": ["content.js"]
  }
  ],
  "permissions": ["activeTab", "contextMenus"]
} 
